{# templates/city/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Enter a City{% endblock %}

{% block body %}
<h1 class="text-center">Enter a Finnish City for Daylight Data</h1>

{{ form_start(form, {'attr': {'class': 'mx-auto', 'style': 'max-width: 500px;'}}) }}
{{ form_row(form.city, {
    'label': 'City Name',
    'label_attr': {'class': 'form-label'},
    'attr': {'class': 'form-control', 'placeholder': 'Type the name of a Finnish city'}
}) }}
{{ form_row(form.city2, {
    'label': 'Second City Name',
    'label_attr': {'class': 'form-label'},
    'attr': {'class': 'form-control', 'placeholder': 'Type the name of a Finnish city'}
}) }}
{{ form_end(form) }}
{% endblock %}
